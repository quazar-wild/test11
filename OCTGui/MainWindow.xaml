<Window x:Class="OCTGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:conv="clr-namespace:OCTGui.Converters"
        xmlns:local="clr-namespace:OCTGui"
        xmlns:vm="clr-namespace:OCTGui.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000" 
        WindowState="{Binding CurrentWindowState}"
        WindowStyle="{Binding CurrentWindowStyle}"
        >

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:vmLogin }">
            <local:LoginView DataContext="{Binding}"></local:LoginView>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:vmWorkspace }">
            <local:WorkSpace DataContext="{Binding}"></local:WorkSpace>
        </DataTemplate>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition x:Name="Row0" Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition x:Name="Row2" Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
        </Grid.ColumnDefinitions>
    
        <Grid Grid.Row="0" Grid.ColumnSpan="3" Height="100" Visibility="{Binding Fullscreen, Converter={StaticResource BoolToVisibilityConverter}}" >
            <Border Background="White" BorderBrush="#FF003366" BorderThickness="0,0,0,5"></Border>
            <TextBlock Text="InTherSteLa" Foreground="#FF003366" VerticalAlignment="Center" FontSize="60" FontWeight="Bold" Margin="20" ></TextBlock>
            <Image Margin="10,5" Source="/Resources/Logo.png" Stretch="None" HorizontalAlignment="Right"></Image>
        </Grid>
        
        <ContentPresenter Grid.Row="1" Grid.ColumnSpan="3" Name="MyContent" Content="{Binding Path=CurrentContent}"/>

        <Grid Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Height="50" Visibility="{Binding Fullscreen, Converter={StaticResource BoolToVisibilityConverter}}">
            <Button HorizontalAlignment="Left" Width="185" Margin="5" Content="{Binding LogInButtonText}"  Command="{Binding LogInCommand}">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding loggedIn}" Value="False">
                                <Setter Property="IsDefault" Value="True"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding loggedIn}" Value="True">
                                <Setter Property="IsDefault" Value="False"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <!--
                Click="Button_Click"
            -->
            <Button VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5, 6, 10, 5" Command="{Binding AboutBoxCommand}"  >
                <Button.Template>
                    <ControlTemplate>
                        <Grid>
                            <Border Width="30" Height="30" BorderThickness="2" BorderBrush="Gray" CornerRadius="20" Background="Transparent" ></Border>
                            <TextBlock Foreground="Gray" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontWeight="Bold" Margin="0, -3, 0, 0">?</TextBlock>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
        <Grid Grid.Row="2" Visibility="{Binding Fullscreen, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" >
                <Border Background="#6B6A69">
                    <TextBlock  Margin="10,5" VerticalAlignment="Bottom" FontSize="14" Foreground="White">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="Idle"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding StatusUpdate}" Value="0">
                                        <Setter Property="Text" Value="Idle"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding StatusUpdate}" Value="1">
                                        <Setter Property="Text" Value="Loading"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding StatusUpdate}" Value="2">
                                        <Setter Property="Text" Value="Ready"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding StatusUpdate}" Value="3">
                                        <Setter Property="Text" Value="Stopping"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Border>
            </StackPanel>
        </Grid>

    </Grid>
</Window>

<Window x:Class="OCTGui.OctControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OCTGui"
        mc:Ignorable="d"
        Title="OctControl" Height="300" Width="600" WindowStyle="ToolWindow" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" 
        FocusManager.FocusedElement="{Binding ElementName=PwBox}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Background="#f2f2f2">
            <Border BorderBrush="#FF003366" BorderThickness="0,0,0,2"></Border>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock  Margin="0,10" Text="Oct Control status:" FontSize="18" FontWeight="Bold"></TextBlock>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="0,5" Text="Current status:" FontSize="14"></TextBlock>
                    <TextBlock Margin="5" FontSize="14">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="Oct is activated"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding OCTIsActive}" Value="true">
                                        <Setter Property="Text" Value="Oct is activated"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding OCTIsActive}" Value="false">
                                        <Setter Property="Text" Value="Oct is deactivated"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <Border Width="10" Height="10" HorizontalAlignment="Right" VerticalAlignment="Center" CornerRadius="50">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="Yellow"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding OCTIsActive}" Value="true">
                                        <Setter Property="Background" Value="Yellow"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding OCTIsActive}" Value="false">
                                        <Setter Property="Background" Value="Gray"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                    </Border>
                </StackPanel>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock  FontSize="14">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Text" Value="Enter password to deactivate Oct:"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding OCTIsActive}" Value="true">
                                    <Setter Property="Text" Value="Enter password to deactivate Oct:"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding OCTIsActive}" Value="False">
                                    <Setter Property="Text" Value="Activate Oct?"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
                
                <Grid Visibility="{Binding OCTIsActive, Converter={StaticResource BoolToVisConverter}}">
                    <PasswordBox x:Name="PwBox" Background="#f2f2f2" HorizontalAlignment="Center" Margin="0,5" Width="250" Height="30" PasswordChanged="PasswordBox_PasswordChanged"></PasswordBox>
                </Grid>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="2" Background="LightGray">
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button Margin="5" Content="Ok" Command="{Binding OkCommand}" Width="100" Height="30" FontSize="14" IsDefault="True"/>
                <Button Margin="5" Content="Close" Width="100" Height="30" FontSize="14" IsCancel="True"/>
            </StackPanel>
            
        </Grid>
    </Grid>
</Window>
